{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "overrides": [
    {
      "files": [ "test/**/*" ],
      "globals": {
        "describe": true,
        "it": true
      },
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
